<div class="container itenerary pb-5">
  <div class="row">
    <div class="col-md-5">
      <h1>Itenerary List</h1>
    </div>
  </div>
  <hr class='divider'>
  <div class="row">
    <div class="col-8">
      <h2 class="pt-5">List</h2>
      <div class="row">
        <table class="table table-borderless">
        <% @iteneraries.each do |itenerary| %>  
          <tbody>
            <td><%= link_to itenerary.title, itenerary_path(itenerary) %></td>
            <td>
              <% if itenerary.favorited_by?(current_user) %>
                <p>
                  <%= link_to itenerary_favorites_path(itenerary), method: :delete do %>
                    ♥<%= itenerary.favorites.count %> favorite
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to itenerary_favorites_path(itenerary), method: :post do %>
                    ♡<%= itenerary.favorites.count %> favorite
                  <% end %>
                </p>
              <% end %>
            </td>
          </tbody>
        <% end %>
        </table>
        <div class="d-flex justify-content-center py-2"><%= paginate @iteneraries %></div>
      </div>
      <h2 class="pt-5">Recommendation</h2>
      <div class="row">
        <div class="col-md-5">
          <div>
            <% @albums.first(3).each do |album| %>
              <div>
                <%= attachment_image_tag album, :image, format: 'jpeg', size: "100x100", clss:"round" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3 pt-5">
      <div class="container">
        <div class="pt-5">
          <h2>search</h2>
          <%= render 'searchs/form' %>
        </div>
        <div class="pt-5">
          <h2>Tag List</h2>
          <% @tag_list.each do |list| %>
             <p><%=link_to list.tag_name,iteneraries_path(tag_id:list.id)%><%= list.iteneraries.count %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>