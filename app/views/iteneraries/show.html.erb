<div class='top-bg-center'>
  <div class="container pb-5">
    <div class='top-bg-introduction mx-auto py-5'>
      <div class='col-9 mx-auto px-3 py-4'>
        <h3 class='pt-3'>
          しおり
        </h3>
          <h4 class='pt-3'><%= @itenerary.title %></h4>
          <h4 class='pt-3'>持ち物リスト</h4>
          <% @belongings.each do |belonging| %>
            <div>
              <li><%= belonging.belongings_name %></li>
            </div>
          <% end %>
          <h4 class='pt-3'>スケジュール</h4>
          <% @schedules.each do |schedule| %>
            <div>
              <li><%= schedule.schedules_date %></li>
              <li><%= schedule.schedules_time %></li>
              <li><%= schedule.schedules_title %></li>
              <li><%= schedule.schedules_comment %></li>
            </div>
          <% end %>
          <h4 class='pt-3'>アルバム</h4>
          <% @albums.each do |album| %>
            <div>
              <%= album.albums_comment %>
              <%= album.albums_comment %>
              <%= attachment_image_tag album, :image, format: 'jpeg', size: "100x100", class:"round" %>
            </div>
          <% end %>
          <h4>タグ</h4>
          <h4>password</h4>
          <div>
            <%= @itenerary.edit_password %>
          </div>
          <%= link_to 'しおりの編集', edit_itenerary_path(@itenerary), class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>